<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net" />
		<section name="instrumentationConfig" type="NServiceBus.Instrumentation.Agent.InstrumentationConfig, NServiceBus.Instrumentation.Agent"
     />
	</configSections>

	<connectionStrings>
		<add name="NSBInstrumentation" connectionString="Data Source=(local)\SQLEXPRESS;Initial Catalog=Instrumentation;Persist Security Info=True;User ID=instrumentation;Password=P@ssw0rd;" providerName="System.Data.SqlClient"/>
	</connectionStrings>
	
	<instrumentationConfig>
		<providers>
			<add name="Saga" />
		</providers>
		<services autoload="true">
			<whitelist>
				<add name="rugby.invoicing.services" />
				<add name="stayinfront.eventservice.inputqueue" />
			</whitelist>
		</services>
	</instrumentationConfig>
	
	<log4net debug="false">
		<appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date %-5level %logger - %message%newline" />
			</layout>
		</appender>
		<root>
			<level value="INFO"/>
			<appender-ref ref="ConsoleAppender"/>
		</root>
	</log4net>
</configuration>